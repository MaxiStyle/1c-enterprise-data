{
	"name": "maxistyle/1c-enterprise-data",
	"description": "PHP library for generating 1C EnterpriseData XML format",
	"type": "library",
	"keywords": ["1c", "enterprisedata", "xml", "export"],
	"license": "MIT",
	"authors": [
		{
			"name": "MaxiStyle",
			"email": "tiranmax@yandex.ru"
		}
	],
	"require": {
		"php": ">=8.1",
		"ext-dom": "*"
	},
	"version": "1.1.2",
	"minimum-stability": "stable",
	"prefer-stable": true,	
    "autoload": {
        "psr-4": {
            "MaxiStyle\\EnterpriseData\\": "src/"
        }
    },
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/maxistyle/1c-enterprise-data.git"
		}
	],
	"require-dev": {
		"squizlabs/php_codesniffer": "*",
		"phpstan/phpstan": "*",
		"friendsofphp/php-cs-fixer": "*"
	}
}
